.flash
.wrapper
  .chat-side
    .side-header
      %p.side-header__user-name 熊谷裕樹
      %ul.side-header__user-menu
        %li.user-menu__edit-user
          = link_to  "" do
            %i.fa.fa-edit
        %li.user-menu__new-group
          = link_to  "" do
            %i.fa.fa-cog
    .groups
      = render partial: "group", local: {}
  .chat-main
    .main-header
      .current-group
        %h2.group-name 猫好き集まれ
        = render partial: "member-list", local: {}
        = link_to  "" do
          .current-group__edit-btn Edit
    .messages
      = render partial: "message", locals: {}
    .form
      %form.new-message
        .input-box
          %input.input-box__text{:name => "message[content]", :placeholder => "type a message", :type => "text"}/
          %label.image-label{:for => "message_image"}
            %i.fa.fa-image
            %input#message_image.image-label__input{:name => "message[image]", :type => "file"}/
        %input.new-message__submit-btn{:name => "commit", :type => "submit", :value => "Send"}/
