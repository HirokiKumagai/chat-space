.message{data: {"id": "#{message.id}"}}
  .message__upper-info
    .message__upper-info__user
      = message.user.name
    .message__upper-info__date
      = message.created_at.strftime("%Y/%m/%d %H:%M")
  .message__text
    - if message.body.present?
      = message.body
  = image_tag message.image.url if message.image.present?